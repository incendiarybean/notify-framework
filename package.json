{
	"name": "@incendiarybean/notify-framework",
	"version": "1.1.3",
	"description": "This is a lightweight framework for creating notifications.",
	"source": "src/index.ts",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"targets": {
		"module": {
			"optimize": true
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/incendiarybean/notify-framework.git"
	},
	"scripts": {
		"start": "nodemon --watch src -e ts --exec 'npm run build:dev'",
		"build": "npm run build:css && parcel build --no-source-maps && rm ./src/min.css",
		"build:dev": "npm run build:css && parcel build && rm ./src/min.css",
		"build:css": "npx tailwindcss -i ./src/base.css -o ./src/min.css --minify"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"bugs": {
		"url": "https://github.com/incendiarybean/notify-framework/issues"
	},
	"homepage": "https://github.com/incendiarybean/notify-framework#readme",
	"keywords": [
		"framework",
		"javascript",
		"js",
		"css",
		"tailwindcss",
		"tailwind",
		"notifications"
	],
	"author": "Benjamin Weare",
	"license": "ISC",
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@parcel/packager-ts": "^2.12.0",
		"@parcel/transformer-typescript-types": "^2.12.0",
		"@types/node": "^22.8.0",
		"animate.css": "^4.1.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.11.0",
		"nodemon": "^3.1.7",
		"parcel": "^2.12.0",
		"postcss": "^8.4.47",
		"tailwindcss": "^3.4.14",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.11.0"
	},
	"files": [
		"dist/*"
	]
}
